{
  // markdown에 이미지 추가 경로 변경
  "markdown.copyFiles.destination": {
    "*": "${documentDirName}/assets/"
  },

  // 터미널에 여러 줄 붙어 넣기 경고 비활성화: 백준의 예제 값 그대로 손쉽게 붙어 넣기 위함
  "terminal.integrated.enableMultiLinePasteWarning": false,

  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  // [코드 포매팅 스타일을 정의합니다](https://80000coding.oopy.io/bd5c80d7-92ce-4387-ae74-b6d35ad77635)
  "C_Cpp.clang_format_fallbackStyle": "Google",
  "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
  "C_Cpp.inlayHints.autoDeclarationTypes.showOnLeft": true,
  "C_Cpp.inlayHints.parameterNames.enabled": true,
  "C_Cpp.inlayHints.referenceOperator.enabled": true,
  "C_Cpp.inlayHints.referenceOperator.showSpace": true
}
